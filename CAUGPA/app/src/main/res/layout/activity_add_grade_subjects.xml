<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.caugpa.AddGradeSubjectsActivity"
    android:background="@drawable/sky">
    <TextView
        android:id="@+id/addSubjects_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1학년 과목"
        android:textStyle="bold"
        android:textColor="@color/WHITE"
        android:textSize="35dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/addSub_recyclerView_mySubs"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/addSubjects_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="match_parent"
        android:layout_height="280dp"/>
    <TextView
        android:id="@+id/addSub_addMent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/addSub_recyclerView_mySubs"
        android:text="모든 과목 보기"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/WHITE"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/addSub_recyclerView_moreSubs"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/addSub_addMent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="match_parent"
        android:layout_height="250dp"/>
<Button
    android:id="@+id/addSubjects"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="과목 추가하기"
    android:textStyle="bold"
    android:textSize="20dp"
    android:layout_margin="10dp"
    android:background="@color/colorPrimary"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>